@model ToDo
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <input asp-for="ToDoId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete To-Do</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" disabled class="form-control" />      
        </div>
        <div class="mb-3">
            <label asp-for="DueDate"></label>
            <input type="date" asp-for="DueDate" asp-format="dateOnly" disabled class="form-control" /> 
        </div>
        <button type="submit" class="btn btn-warning" style="width:150px">Delete</button>
        <a asp-controller="ToDoList" asp-action="Index" class="btn btn-secondary" style="width:150px">
            back    
        </a>

    </div>

</form>

@section Scripts{
    @{
        <partial name= "_ValidationScriptsPartial" />
    }
}