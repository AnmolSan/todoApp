@model IEnumerable<ToDo>
@{
    ViewData["Title"] = "Index";
}
<partial name="_NotificationPartial" />
<div class="container p-3">
    <div class="row pt-4"> 
        <div class ="col-6"> 
            <h2 class="text-primary">To Do List</h2>
        </div>
        <div class ="col-6 text-end">
            <a asp-controller="ToDoList" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-journal-plus"></i> &nbsp; Add
            </a>
            </div>
    </div>


    <table class = "table table-bordered table-striped" style = "width:100%">
        <thead>
            <tr>
                <th>
                    Sr No.
                </th>
                <th>
                    Title
                </th>
                <th>
                    Due Date
                </th>
                <th>

                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td withd="10%">
                        @obj.ToDoId
                    </td>
                    <td width="50%">
                        @obj.Title
                    </td>
                    <td width="10%">
                        @obj.DueDate.ToShortDateString()
                    </td>
                    <td width="15%">
                        <div class = "w-75 btn-group" role="group">
                            <a asp-controller="ToDoList" asp-action="Edit" asp-route-id="@obj.ToDoId" class="btn btn-outline-light mx-2"><Id class="bi bi-pencil-square"></Id>&nbsp; Edit</a>
                        </div>

                    </td>
                    <td width = "15%">
                        <div class = "w-75 btn-group" role="group">
                            <a asp-controller="ToDoList" asp-action="Delete" asp-route-id="@obj.ToDoId" class="btn btn-outline-warning mx-2"><i class="bi bi-trash"></i>&nbsp; Delete</a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
